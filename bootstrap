echo '#          \/        \/        \/        \/  )/           \/        \/   \/ #'
echo '#---------------------------------------------------------------------------#'
echo "#-------------| You are now dead, please take your receipt ! |--------------#"
echo '#---------------------------------------------------------------------------#'
echo ''
echo 'See build options with `./configure --help`, make your choiches, then'
echo '$> ./configure [--prefix=/path] [...] && make && make install'

